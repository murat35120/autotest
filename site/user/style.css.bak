.screen {
    width:100%;
	height:100%;
    overflow:auto;
}

/*5 */
div, input, select, textarea{
    font-size:  20px;    
    font-family:  Sans-serif;  
}

.header{
    font-size:  var(--mark_font_size, 3em);
	font-family:  var(--mark_font_family, Sans-serif); 
	color: var(--mark_font_color, #000000);
	display:var(--mark_show, 'flex');
	margin: 10px;
	text-align: center;
}  
.slogan{
	font-size:  var(--slogan_font_size, 1em);
    font-family: var(--slogan_font_family, Cursive); 
	color: var(--slogan_font_color, #000000);
	margin: 10px;
	display:var(--slogan_show, 'flex');	
	text-align: center;
}

.marginHeigth{
    margin: 30px 0;
}

.big1{
    margin: 10px;
	padding: 10px;
	font-size:  30px;

}
.forTwo>div:nth-child(2n+1){
	border-radius: 50% 10% 10% 50%;
	margin: 5px;
	padding: 10px 20px;
}
.forTwo>div:nth-child(2n){
	border-radius: 10% 50% 50% 10%;
	margin: 5px;
	padding: 10px 20px;
}
select{
    background-color:rgba(255, 255, 255, 0);
	border-color:rgba(255, 255, 255, 0);
	border-radius: 5px;
}
